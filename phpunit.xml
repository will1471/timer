<phpunit bootstrap="./bootstrap.php">

    <testsuites>
        <testsuite>
            <directory>./tests</directory>
        </testsuite>
    </testsuites>

    <logging>
        <log type="coverage-html" target="./cov" charset="UTF-8" highlight="false" lowUpperBound="35" highLowerBound="70"/>
    </logging>

    <filter>
        <whitelist>
            <directory>./src/</directory>
        </whitelist>
        <blacklist>
            <directory>./tests/</directory>
            <directory>./vendor/</directory>
        </blacklist>
    </filter>

</phpunit>
